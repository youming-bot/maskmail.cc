{
  "name": "maskmail",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "wrangler:dev": "npx wrangler dev",
    "dev:cf": "npx @opennextjs/cloudflare build && wrangler dev",
    "dev:remote": "npx @opennextjs/cloudflare build && wrangler dev --remote",
    "build:cf": "npx @opennextjs/cloudflare build",
    "deploy:cf": "npx @opennextjs/cloudflare deploy",
    "preview:cf": "npx @opennextjs/cloudflare preview",
    "deploy": "npx @opennextjs/cloudflare deploy",
    "deploy:preview": "npx @opennextjs/cloudflare deploy --env preview",
    "db:generate": "drizzle-kit generate",
    "db:generate:named": "drizzle-kit generate --name",
    "db:migrate:local": "wrangler d1 migrations apply maskmail-db --local",
    "db:migrate:preview": "wrangler d1 migrations apply maskmail-db --env preview",
    "db:migrate:prod": "wrangler d1 migrations apply maskmail-db --remote",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=drizzle.local.config.ts",
    "db:inspect:local": "wrangler d1 execute maskmail-db --local --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
    "db:inspect:preview": "wrangler d1 execute maskmail-db --env preview --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
    "db:inspect:prod": "wrangler d1 execute maskmail-db --remote --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
    "db:reset:local": "wrangler d1 execute maskmail-db --local --command=\"DROP TABLE IF EXISTS todos;\" && pnpm run db:migrate:local",
    "cf:secret": "npx wrangler secret put",
    "cf-typegen": "pnpm exec wrangler types && pnpm exec wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "lint": "npx biome format --write src/",
    "lint:check": "npx biome check src/"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@opennextjs/cloudflare": "^1.3.0",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "better-auth": "^1.3.9",
    "better-sqlite3": "^12.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "lucide-react": "^0.544.0",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.4",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5",
    "wrangler": "^4.35.0"
  }
}
